<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>PerfectMeal</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  
  
  <servlet>
  	<servlet-name>RegisterUserServlet</servlet-name>
  	<servlet-class>com.algonquin.PerfectMeal.servlets.RegisterUserServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>RegisterUserServlet</servlet-name>
  	<url-pattern>/signup</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>UserAuthenticationServlet</servlet-name>
  	<servlet-class>com.algonquin.PerfectMeal.servlets.UserAuthenticationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UserAuthenticationServlet</servlet-name>
  	<url-pattern>/verify-email</url-pattern>
  </servlet-mapping>
  
  
    <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.algonquin.PerfectMeal.servlets.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>LogOffServlet</servlet-name>
  	<servlet-class>com.algonquin.PerfectMeal.servlets.LogOffServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LogOffServlet</servlet-name>
  	<url-pattern>/logoff</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>AuthenticationFilter</filter-name>
  	<filter-class>com.algonquin.PerfectMeal.filters.AuthenticationFilter</filter-class>
  </filter>
  
  <session-config>
  <session-timeout>60</session-timeout>
  </session-config>
  
  <filter-mapping>
  	<filter-name>AuthenticationFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>